---
interface Props {
	title: string;
	body: string;
	href: string;
	image: string;
}

const { href, title, body, image } = Astro.props;
---
<div class="card" style="width: 18rem;">
	<img src={image} class="card-img-top" alt="...">
	<div class="card-body">
	  <h5 class={title}></h5>
	  <p class="card-text">{body}</p>
	  <a href={href} class="btn btn-primary">Ver Link</a>
	</div>
  </div>

